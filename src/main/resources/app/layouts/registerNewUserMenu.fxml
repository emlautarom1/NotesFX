<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" fillWidth="false" prefHeight="400.0" prefWidth="250.0" spacing="20.0" stylesheets="@../style/bootstrap2.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.RegisterUserController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <Label text="Register User">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
   </Label>
   <Pane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
   <TextField fx:id="name_field" onAction="#registerNewUser" promptText="Name" />
   <TextField fx:id="username_field" onAction="#registerNewUser" promptText="Username" VBox.vgrow="NEVER" />
   <PasswordField fx:id="password_field" onAction="#registerNewUser" promptText="Password" VBox.vgrow="NEVER" />
   <HBox alignment="CENTER" spacing="45.0" VBox.vgrow="NEVER">
      <Button cancelButton="true" mnemonicParsing="false" onAction="#cancelCreateAccount" text="Cancel" />
      <Button defaultButton="true" mnemonicParsing="false" onAction="#registerNewUser" text="Register" />
   </HBox>
</VBox>
